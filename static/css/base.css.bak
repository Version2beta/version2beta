body {
 padding: 0;
 margin: 0;
 font-family: 'Linux Libertine', Palatino, 'Palatino Linotype', 'Book Antiqua', Georgia, 'Times New Roman', serif;
 font-size: 16px;
 color: #111;
 letter-spacing: 0.8px;
 word-spacing: 0.1em;
 line-height: 32px;
 width: 640px;
 margin: 0 auto;
}

h1, h2, h3, h4, #sitename {
 font-family: 'Garamond', 'Georgia', serif;
 font-weight: normal;
 line-height: 1.0em;
 color: black;
 margin: 0;
 padding: 0;
}

h1 {
 font-size: 1.25em;
 margin: 2em 0 0 0;
}

h2 {
 font-size: 2.0em;
 padding: 0.5em 0;
}

h3 {
 font-size: 1.5em;
 padding: 0.5em 0;
}

h4 {
 font-size: 1.25em;
 padding: 0.5em 0;
}

a { color: #004B6B; }
a,
a:visited {
 color: #B22222;
}

p { margin-bottom: 32px; }

#site {
 margin: 0 auto;
 width: 640px;
 min-height:53em;
 position: relative;
}

#header {
 text-align: center;
 padding: 2.5em 0 2.5em 0;
}

#header a {
 text-decoration: none;
}

article header h2 a,
article header h2 a:visited {
 color: black;
 text-decoration: none;
}
 
article header h2 a:hover {
 text-decoration: underline;
}

#header #sitename {
 font-size: 4.0em;
 letter-spacing: 8px;
}

span.time {
 display: block;
 width: 100%;
 background-color: #e8e8e8;
 text-align: center;
 margin: 1.0em 0;
 padding: 4px 0;
 letter-spacing: 2px;
}

a.year { text-decoration: none; }

a.year h2 {
 display: block;
 width: 100%;
 background-color: #e8e8e8;
 text-align: center;
 margin: .5em 0 0 0;
 padding: .25em 0;
 letter-spacing: 12px;
}

a.listing {
 text-decoration: none;
}

.listing {
 padding: 1em 2em 0.25em 2em;
 margin-bottom: 0.5em;
 border-top: 1px solid #babeba;
}

.continue { text-align: right; }

.context-nav,
ul.breadcrumbs {
 list-style-type: none;
 margin: 0;
 padding: 0;
 position: absolute;
 font-size: 0.8em;
}

.context-nav { right:0; }

ul.breadcrumbs {
 position: absolute;
 top: 0;
 left: 20px;
}

.breadcrumbs li { display: inline; }
.breadcrumbs a {
 text-decoration: none;
 color: #004B6B;
 color: #B22222;
}

.context-nav a {
 color: #4d6680;
}

.breadcrumbs a:hover { text-decoration: underline; }
.breadcrumbs .separator { color: #4f6072; }

#sitenav {
 text-align: center;
 border-bottom: .2em solid #454145;
 padding-bottom: 0.2em;
 height: 33px;
}

#sitenav ul {
 list-style-type: none;
 float: right;
 margin: 0;
}

#sitenav li {
 float: left;
 width: 96px;
 margin-left: 2px;
}

#sitenav a {
 text-decoration: none;
 background-color: #babeba;
 color: #4d6680;
 border-top-left-radius: 6px;
 border-top-right-radius: 6px;
 display: block;
 padding: 2px 8px;
}

#sitenav .selected a {
 background-color: #454145;
 color: #b5cce3;
}

#content-header{
 padding-bottom:.5em;
}

#content-header h1{
 font-size: 1.75em;
}

.post-date{
 float: right;
 font-style: italic;
 font-size: 0.8em;
 margin-top: -72px;
}

p.archivelink {
 display: block;
 width: 100%;
 background-color: #e8e8e8;
 text-align: center;
 margin: 1.0em 0;
 padding: 4px 0;
}

div.footnote {
 font-size: 0.8em;
}

#footer {
 text-align: center;
 border-top: 1px solid #babeba;
 width: 640px;
 margin: 2em auto 0;
 font-size: 0.7em;
}

sub,
sup {
 line-height: 0;
}

sup a,
sup a:visited {
 color: #004B6B;
 color: #B22222;
 text-decoration: none;
}

sup a:hover {
 text-decoration: underline;
}

blockquote {
 font-family: ubuntu, "Trebuchet MS", sans-serif!important;
 font-size: 14px;
 background: #e8e8e0;
 padding: 15px 30px; 
 margin: 15px -30px;
 line-height: 1.6;
}

textarea,
code,
pre {
 font-family: 'Consolas', 'Menlo', 'Deja Vu Sans Mono', 'Bitstream Vera Sans Mono', monospace!important;
 font-size: 13px;
 background: #e8e8e8;
}

code {
 padding: 6px 3px 4px 3px;
}

pre code {
 padding: 0;
}

pre {
 padding: 15px 30px; 
 margin: 15px -30px;
 line-height: 1.3;
 overflow-x: auto;
}

#disqus_thread {
 font-size: 0.9em;
}

#disqus_thread h3 {
 font-size: 1.2em;
}

.see-also {
 font-size: smaller;
 color: #444;
 background-color: #e8e8e8;
 border: 1px solid #444;
 padding: 0 32px;
 margin: 24px auto;
 width: 85%;
}

